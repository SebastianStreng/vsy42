<Window x:Class="vsy42.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="450" Width="300">
    <Grid>
        <StackPanel>
            <Label HorizontalAlignment="Center" Margin="0,0,0,30">Please add the following data to proceed</Label>
            
            <Label>Add Username:</Label>
            <TextBox x:Name="tbUsername" BorderBrush="#FF0845F9" Height="30" Margin="0,0,0,30"></TextBox>
            <Label>Add Port to Receive Messages:</Label>
            <TextBox x:Name="tbReceivePort" BorderBrush="#FF0845F9" Height="30" Margin="0,0,0,30"></TextBox>
            <Label>Add Port to Send Messages:</Label>
            <TextBox x:Name="tbSendPort" BorderBrush="#FF0845F9" Height="30" Margin="0,0,0,50"></TextBox>
            <Button Height="60" x:Name="btnStartChat" Content="Start UDP-Chat" BorderBrush="#FF0845F9"></Button>

        </StackPanel>
       

    </Grid>
</Window>
